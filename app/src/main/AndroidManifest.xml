<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.android.liuwei.myandroidcode"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".DemoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="sensor"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".feature.orientation.OrientationActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:screenOrientation="sensorLandscape" />

        <activity android:name=".feature.link.LinkActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="nlnflgp" />
            </intent-filter>
        </activity>

        <activity
            android:name=".feature.cookie.CookieActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:screenOrientation="sensor" />
        <activity
            android:name=".feature.deviceinfo.DeviceInfoActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:screenOrientation="sensor" />
        <activity
            android:name=".feature.link.TestIntentActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:screenOrientation="sensor">
            <!--<intent-filter>-->
            <!--<action android:name="android.intent.action.MAIN" />-->

            <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>
        <activity
            android:name=".feature.dialog.MyDialogActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:screenOrientation="sensor" />
        <activity
            android:name=".feature.lebocast.LeboCastActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:screenOrientation="sensor" />

        <activity android:name=".feature.service.ServiceActivity" />

        <activity android:name=".feature.service.ServiceActivity2" />
        <activity android:name=".feature.fragment.FragmentActivity" />
        <activity android:name=".feature.eventbus.EventBusDemoActivity" />
        <activity android:name=".feature.eventbus.EventBusDetailActivity" />
        <activity android:name=".feature.autosizetextview.AutoSizeTextViewActivity" />
        <activity android:name=".feature.theme.DayNightDemoActivity" />
        <activity android:name=".feature.demo.SimpleDemoActivity" />
        <activity
            android:name=".feature.process.RemoteActivity"
            android:process=":remote_activity" />
        <activity android:name=".feature.process.LocalMessengerActivity" />
        <activity android:name=".feature.process.LocalAIDLActivity" />
        <activity android:name=".feature.databinding.DataBindingDemoActivity" />
        <activity android:name=".feature.lifecycle.LifecycleDemoActivity" />
        <activity android:name=".feature.scheduler.SchedulerActivity" />

        <!--################################-->
        <!--service-->
        <!--################################-->
        <service android:name=".feature.service.MyBackgroundService" />
        <service android:name=".feature.service.MyBackgroundIntentService" />
        <service
            android:name=".feature.process.RemoteMessengerService"
            android:process=":remote_service_messenger" />
        <service
            android:name=".feature.process.RemoteAIDLService"
            android:process=":remote_service_aidl" />

    </application>

</manifest>