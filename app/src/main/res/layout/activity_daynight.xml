<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="HardcodedText,SpUsage">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主题"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode:" />

        <Button
            android:id="@+id/btn_mode_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btn_mode_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?settingsWindowBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="AppThemePrimaryText"
            android:textColor="?settingsPrimaryTextColor"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/app_minor_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="AppThemeMinorText"
            android:textColor="?settingsMinorTextColor"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/app_tiny_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="AppThemeTinyText"
            android:textColor="?settingsTinyTextColor"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>