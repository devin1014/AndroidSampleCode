<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <TextView
        android:id="@+id/link_browser"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackground"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="link to browser"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/link_channel_1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackground"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="link to 'Channel_1'"
        android:textColor="#000000"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/link_channel_2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackground"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="link to 'Channel_2'"
        android:textColor="#000000"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/link_schedule"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackground"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="link to 'Schedule'"
        android:textColor="#000000"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/link_activation"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackground"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="link to 'Activation'"
        android:textColor="#000000"
        android:textSize="14dp" />

</LinearLayout>